<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.touchmenot.MainActivity">


    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:sparkbutton_activeImage="@drawable/warningtrianglered"
        app:sparkbutton_iconSize="100dp"
        app:sparkbutton_inActiveImage="@drawable/warningtriangleblack"
        app:sparkbutton_primaryColor="@color/colorPrimary"
        app:sparkbutton_secondaryColor="@color/colorPrimaryDark" >

    </com.varunest.sparkbutton.SparkButton>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginStart="17dp"
        android:text="Set sensitivity" />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="200dp"
        android:progress="3"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="67dp"
        android:max="10" />
</RelativeLayout>
